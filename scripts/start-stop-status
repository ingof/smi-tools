#!/bin/sh

case $1 in
	start)
		insmod /lib/modules/usbserial.ko
		insmod /lib/modules/ftdi_sio.ko
		### Start this package.
		crc "Start"
#		echo "FTDI-USB Treiber wurden geladen." > $SYNOPKG_TEMP_LOGFILE 
		exit 0
		;;
	stop)
#		rmmod fdti_sio
#		rmmod usbserial
		### Stop this package.
		crc "Stop"
#		echo "FTDI-SUB Treiber wurden entladen." > $SYNOPKG_TEMP_LOGFILE
		;;
	status)
		### Check package alive.
		if [ -h "/usr/bin/crc" ]; then
			exit 2
		else
			exit 3
		fi
		;;
	log)
		exit 0
		;;
	*)
		exit 1
		;;
esac
